{
    "version": 2,
    "env": {
        "FACEBOOK_APP_ID": "@latest-facebook-live-app-id",
        "FACEBOOK_APP_SECRET": "@latest-facebook-live-app-secret"
    },
    "builds": [
        { "src": "index.html", "use": "@now/static" },
        { "src": "page.js", "use": "@now/node" }
    ],
    "routes": [
        {
            "src": "/page/(?<pageId>[^/]*)",
            "headers": {"cache-control": "s-maxage=300, stale-while-revalidate"},
            "dest": "/page.js?id=$pageId"
        }
    ]
}